{
    "timestamp": {
        "$resolver": "timestamp",
        "pattern": {
            "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
            "timeZone": "UTC"
        }
    },
    "status": {
        "$resolver": "level",
        "field": "name"
    },
    "thread_name": {
        "$resolver": "thread",
        "field": "name"
    },
    "logger_name": {
        "$resolver": "logger",
        "field": "name"
    },
    "message": {
        "$resolver": "message",
        "stringified": true
    },
    "exception_class": {
        "$resolver": "exception",
        "field": "className"
    },
    "exception_message": {
        "$resolver": "exception",
        "field": "message"
    },
    "stack_trace": {
        "$resolver": "exception",
        "field": "stackTrace",
        "stackTrace": {
            "stringified": true
        }
    },
    "host": "${hostName}"
}
